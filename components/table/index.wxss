/* components/table/index.wxss */

.table {
  border: 1px solid #ccc;
  font-size: 28rpx;
  background: #fff;
  border-right: none;
}
 
.tr{
  display: flex;
}
 
.td {
  text-align: center;
  border: 1px solid #ccc;
  display: inline-block;
  border-left: none;
  border-bottom: none;
  flex: 1;
  height: 54rpx;
  line-height: 54rpx;
}
 
.thead .td{
  border-top: none;
  height: 60rpx;
  line-height: 60rpx;
  background-color: #97e0c2;
}